{
  "name": "replyguy",
  "displayName": "ReplyGuy",
  "version": "0.7.0",
  "description": "A browser extension that adds AI-powered reply capabilities to your X/Twitter experience. Built with Plasmo and powered by OpenRouter.",
  "author": "@abdiisan",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "build:prod": "plasmo build --mode production --zip",
    "build:dev": "plasmo build --mode development",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/selector": "^0.0.5",
    "@plasmohq/storage": "^1.13.0",
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "^6.28.1",
    "sharp": "^0.33.5",
    "sweetalert2": "^11.15.10"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@types/react-router-dom": "^5.3.3",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "storage",
      "activeTab"
    ]
  }
}
